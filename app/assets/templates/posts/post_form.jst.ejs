<% if (errors) { %>
  <ul>
  <% errors.forEach(function(error){ %>
    <li><%= error %></li>
  <% }) %>
  </ul>
<% } %>

<form>
<label>Title:
<input type="text" name="post[title]" value="<%= post.escape('title') %>">
</label>
<br>
<label>Body:
<textarea name="post[body]"><%= post.escape('body') %></textarea>
</label>
<br>
<input type="submit" value="Update Post">
</form>
